<class
    name = "zccp_server"
    title = "ZCCP Server"
    proto = "zccp_msg"
    script = "zproto_server_c"
    include = "czmq.h"
    header = "."
    >
    This is a server implementation of the ZeroMQ Command & Control Protocol

    <state name = "start" inherit = "external">
        <event name = "HELLO" next = "connected">
            <action name = "register new client" />
            <action name = "send" message = "READY" />
        </event>
    </state>

    <state name = "connected" inherit = "external">
        <event name = "SUBSCRIBE">
            <action name = "subscribe client to events" />
        </event>
        <event name = "PUBLISH">
            <action name = "forward to subscribers" />
        </event>
        <event name = "REQUEST">
            <action name = "send" message = "REPLY" />
        </event>
        <event name = "forward">
            <action name = "send" message = "PUBLISH" />
        </event>
    </state>

    <state name = "external">
        <!-- All other protocol messages are invalid -->
        <event name = "*">
            <action name = "send" message = "INVALID" />
            <action name = "terminate" />
        </event>
   </state>
</class>
